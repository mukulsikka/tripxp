extends layout

block content
    h1 Add New Location
    ul.errors
        if errors
            each error , i in errors
             li.alert.alert-danger #{error.msg}
    form(method='post',action='/categories/add')
        .form-group
            label Location:
            input.form-control(name='title',type='text')
        input.btn.btn-default(name='submit',style='margin-bottom:10px;width: 50px;left:calc(46%)',type='submit',value='Save')
    
    each category, i in categories
        p #{category.title}
        form(method='get',action='/categories/delete/#{category.title}')
            input.btn.btn-default(name='submit',style='margin-bottom:10px;width: 50px;',type='submit',value='delete')
        
        form(method='post',action='/categories/edit/#{category.title}')
            .form-group
                input.form-control(name='title',type='text')
            input.btn.btn-default(name='submit',style='margin-bottom:10px;width: 50px;',type='submit',value='Update')