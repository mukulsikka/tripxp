extends layout

block content
    h1 What's on your mind?
    ul.errors
        if errors
            each error , i in errors
             li.alert.alert-danger #{error.msg}
    form(method='post',action='/question/qus')
        .form-group
            textarea.form-control(name='title',type='text',placeholder="Question")
        .form-group
            select.form-control(name='cat',placeholder="Location")
                    each category, i in categories
                        option(value= '#{category.title}' ) #{category.title}
        .form-group
            input(name='author',type='hidden',value='#{user.username}')
        input.btn.btn-default(name='submit',style='margin-bottom:10px;width: 50px;left:calc(46%)',type='submit',value='Save')
        script(src="/ckeditor/ckeditor.js")
        script
            | CKEDITOR.replace('body');