extends layout

block content
    h1=title
    ul.errors
        if errors
            each error , i in errors
             li.alert.alert-danger #{error.msg}
    form(method='post',action='/posts/add' )
        .form-group
            label Title:
            input.form-control(name='title',type='text')
        .form-group
            label Location:
            select.form-control(name='cat')
                    each category, i in categories
                        option(value= '#{category.title}' ) #{category.title}
        .form-group
            label Body
            textarea.form-control(name='body',id='text')
        .form-group
            input(name='author',type='hidden',value='#{user.username}')
        
        input.btn.btn-default(name='submit',style='margin-bottom:10px;width: 50px;left:calc(46%)',type='submit',value='Save')
        script(src="/ckeditor/ckeditor.js")
        script
            | CKEDITOR.replace('body');